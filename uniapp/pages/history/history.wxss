
/* 记录列表容器 */
.records {
  flex: 1;
  padding: 0rpx;
  box-sizing: border-box;
}

/* 记录卡片 */
.record-card {
  margin-bottom: 30rpx;
  background-color: #ffffff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
}

/* 问题和回答卡片通用样式 */
.question-card,
.answer-card {
  padding: 24rpx;
  display: flex;
}

.question-card {
  background-color: #f8f9fa;
  border-bottom: 1px solid #f0f0f0;
}

.answer-card {
  background-color: #ffffff;
}

.icon {
  width: 64rpx;
  height: 64rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.content {
  flex: 1;
}

.text {
  font-size: 28rpx;
  line-height: 1.6;
  color: #333333;
  word-break: break-word;
}

.time {
  font-size: 22rpx;
  color: #999999;
  margin-top: 12rpx;
  text-align: right;
}

/* 空状态 */
.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 100rpx;
}

.empty image {
  width: 240rpx;
  height: 240rpx;
  opacity: 0.5;
  margin-bottom: 30rpx;
}

.empty text {
  font-size: 28rpx;
  color: #cccccc;
}